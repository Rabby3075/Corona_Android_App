<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/corona2"
>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >
          <Button
              android:id="@+id/button2"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              android:text="What is this COVID-19"
              android:textSize="30dp"
              android:background="#E8B20F"
              android:layout_margin="20dp"
              android:padding="10dp"
              />
          <Button
              android:id="@+id/button3"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              android:text="How corona spreads"
              android:textSize="30dp"
              android:background="#E8B20F"
              android:layout_margin="20dp"
              android:padding="10dp"
              />
          <Button
              android:id="@+id/button4"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              android:text="Corona Virus Syndromes"
              android:textSize="30dp"
              android:background="#E8B20F"
              android:layout_margin="20dp"
              android:padding="10dp"
              />

          <Button
              android:id="@+id/button5"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              android:text="What should we do to protect COVID-19"
              android:textSize="30dp"
              android:background="#E8B20F"
              android:layout_margin="20dp"
              android:padding="10dp"
              />



          <Button
              android:id="@+id/button6"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              android:text="Global 24 hour Update"
              android:textSize="30dp"
              android:background="#E8B20F"
              android:layout_margin="20dp"
              android:padding="10dp"
              />
          <Button
              android:id="@+id/button7"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              android:text="IEDCR HOTLINE number"
              android:textSize="30dp"
              android:background="#E8B20F"
              android:layout_margin="20dp"
              android:padding="10dp"
              />

      </LinearLayout>
  </ScrollView>



</LinearLayout>